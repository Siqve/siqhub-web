{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":pinAllExceptPeerDependencies"],
  "timezone": "Europe/Oslo",
  "schedule": ["after 10pm and before 6am"],
  "prHourlyLimit": 4,
  "prConcurrentLimit": 6,
  "labels": ["dependencies"],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "addLabels": ["major"]
    },
    {
      "matchUpdateTypes": ["minor"],
      "automerge": true,
      "addLabels": ["minor"]
    },
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "addLabels": ["patch"]
    }
  ]
}